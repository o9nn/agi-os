{
  "name": "@deditor-app/root",
  "type": "module",
  "version": "0.0.1-alpha.2",
  "private": true,
  "packageManager": "pnpm@10.18.2",
  "description": "Opinionated Datasets Editor for managing, labelling, processing massive scale of data and be able to visualize them.",
  "author": {
    "name": "Moeru AI - Project AIRI Team",
    "email": "airi@moeru.ai",
    "url": "https://github.com/moeru-ai"
  },
  "main": "out/main/index.js",
  "scripts": {
    "dev": "pnpm -F @deditor-app/deditor dev",
    "dev:remote": "pnpm -F @deditor-app/deditor dev:remote",
    "dev:web": "pnpm -F @deditor-app/deditor web:dev",
    "build": "pnpm -r -F=\"./packages/*\" -F=\"./apps/*\" run build",
    "build:packages": "pnpm -F=\"./packages/*\" run build",
    "build:web": "pnpm -F @deditor-app/deditor web:build",
    "build:unpack": "pnpm run build && pnpm -F @deditor-app/deditor build:unpack",
    "build:electron": "pnpm run build && pnpm -F @deditor-app/deditor build:electron",
    "start": "pnpm -F @deditor-app/deditor start",
    "start:web": "pnpm -F @deditor-app/deditor web:start",
    "test": "vitest --coverage",
    "test:run": "vitest run",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache --fix .",
    "typecheck": "pnpm -r -F=\"./packages/*\" -F=\"./apps/*\" run --parallel typecheck",
    "up": "taze -w -r -I -f && pnpm prune && pnpm dedupe"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@antfu/ni": "^26.1.0",
    "@iconify/utils": "^3.0.2",
    "@proj-airi/unocss-preset-chromatic": "^1.0.0",
    "@types/node": "^24.7.1",
    "@unocss/eslint-config": "^66.5.3",
    "@unocss/eslint-plugin": "^66.5.3",
    "@unocss/preset-mini": "^66.5.3",
    "@unocss/preset-web-fonts": "^66.5.3",
    "@unocss/preset-wind3": "^66.5.3",
    "bumpp": "^10.3.1",
    "eslint": "^9.37.0",
    "taze": "^19.7.0",
    "tsdown": "^0.15.6",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "unocss": "^66.5.3",
    "unocss-preset-animations": "^1.2.1",
    "unocss-preset-scrollbar": "^3.2.0",
    "unocss-preset-shadcn": "^1.0.1",
    "unplugin-unused": "^0.5.4",
    "vite": "^7.1.9",
    "vite-plugin-inspect": "^11.3.3",
    "vitest": "^3.2.4"
  }
}
