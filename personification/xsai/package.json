{
  "name": "@xsai/workspace",
  "type": "module",
  "version": "0.4.0-beta.8",
  "private": true,
  "packageManager": "pnpm@10.10.0",
  "repository": "github:moeru-ai/xsai",
  "scripts": {
    "build": "turbo build",
    "build:packages": "turbo -F=!./docs build",
    "bump": "bumpp",
    "docs:dev": "pnpm -rF @xsai/docs dev",
    "lint": "eslint --flag unstable_native_nodejs_ts_config --cache .",
    "test": "pnpm -r --workspace-concurrency=1 test",
    "test:speech": "pnpm -r test:speech",
    "test:transcription": "pnpm -r test:transcription"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.16.2",
    "@moeru/eslint-config": "catalog:",
    "@moeru/tsconfig": "catalog:",
    "@pnpm/find-workspace-dir": "^1000.1.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.0.13",
    "@vitest/coverage-v8": "catalog:",
    "automd": "^0.4.0",
    "bumpp": "^10.2.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.31.0",
    "pkgroll": "^2.14.3",
    "tsdown": "^0.15.12",
    "tsx": "^4.20.3",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3",
    "vitest": "catalog:"
  }
