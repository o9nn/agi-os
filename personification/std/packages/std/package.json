{
  "name": "@moeru/std",
  "type": "module",
  "version": "0.1.0-beta.13",
  "description": "Runtime-agnostic TypeScript Utils for Moeru AI.",
  "author": "Moeru AI",
  "license": "MIT",
  "homepage": "https://std.moeru.ai",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moeru-ai/std.git",
    "directory": "packages/std"
  },
