    "./error": "./src/error/index.ts",
    "./merge": "./src/merge/index.ts",
    "./set-interval": "./src/set-interval/index.ts",
    "./sleep": "./src/sleep/index.ts",
    "./trampoline": "./src/trampoline/index.ts",
    "./with-retry": "./src/with-retry/index.ts"
  },
  "files": [
    "dist"
