{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "include": ["./ConanPresets.json"],
    "configurePresets": [
        {
            "name": "Release-test",
            "displayName": "Release Test Configuration",
            "inherits": "conan-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_TESTS": "ON",
                "ASAN": "OFF",
                "SVS": "OFF",
                "CLI": "ON"
            }
        },
        {
            "name": "Debug-shared",
            "displayName": "Debug Shared Configuration",
            "inherits": "conan-debug",
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "ON",
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTS": "ON",
                "ASAN": "OFF",
                "SVS": "OFF",
                "CLI": "ON"
            }
        },
        {
            "name": "Debug-test",
            "displayName": "Debug Test Configuration",
            "inherits": "conan-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTS": "ON",
                "ASAN": "OFF",
                "SVS": "OFF",
                "CLI": "ON"
            }
        },
        {
            "name": "Debug-test-asan",
            "displayName": "Debug Test with ASAN",
            "inherits": "conan-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTS": "ON",
                "ASAN": "ON",
                "SVS": "OFF",
                "CLI": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Debug-shared",
            "displayName": "Build Debug Shared",
            "configurePreset": "Debug-shared",
            "configuration": "debug",
            "inherits": "conan-debug"
        },
        {
            "name": "Debug-test",
            "displayName": "Build Debug Test",
            "configurePreset": "Debug-test",
            "configuration": "debug",
            "inherits": "conan-debug"
        },
        {
            "name": "Debug-test-asan",
            "displayName": "Build Debug Test with ASAN",
            "configurePreset": "Debug-test-asan",
            "configuration": "debug",
            "inherits": "conan-debug"
        },
        {
            "name": "Release-test",
            "displayName": "Build Release Test",
            "configurePreset": "Release-test",
            "configuration": "release",
            "inherits": "conan-release"
        }
    ],
    "testPresets": [
        {
            "name": "Debug-test",
            "displayName": "Test Debug",
            "configurePreset": "Debug-test",
            "inherits": "conan-debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "Debug-test-asan",
            "displayName": "Test Debug",
            "configurePreset": "Debug-test-asan",
            "inherits": "conan-debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "Release-test",
            "displayName": "Test Release",
            "configurePreset": "Release-test",
            "output": {
                "outputOnFailure": true
            }
        }
    ],
    "packagePresets": [
        {
            "name": "Release-test",
            "displayName": "Package Release Test",
            "configurePreset": "Release-test",
            "packageDirectory": "${sourceDir}/"
        }
    ],
    "workflowPresets": [
        {
            "name": "Debug-test-workflow",
            "displayName": "Debug Test Workflow",
            "steps": [
                {
                    "type": "configure",
                    "name": "Debug-test"
                },
                {
                    "type": "build",
                    "name": "Debug-test"
                },
                {
                    "type": "test",
                    "name": "Debug-test"
                }
            ]
        },
        {
            "name": "Debug-test-asan-workflow",
            "displayName": "Debug Test Workflow",
            "steps": [
                {
                    "type": "configure",
                    "name": "Debug-test-asan"
                },
                {
                    "type": "build",
                    "name": "Debug-test-asan"
                },
                {
                    "type": "test",
                    "name": "Debug-test-asan"
                }
            ]
        },
        {
            "name": "Release-test-workflow",
            "displayName": "Release Test Workflow",
            "steps": [
                {
                    "type": "configure",
                    "name": "Release-test"
                },
                {
                    "type": "build",
                    "name": "Release-test"
                },
                {
                    "type": "test",
                    "name": "Release-test"
                }
            ]
        }
    ]
}
